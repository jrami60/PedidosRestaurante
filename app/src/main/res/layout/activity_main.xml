<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen principal del restaurante -->
        <ImageView
            android:id="@+id/imageLogoRestaurante"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Logo del restaurante"
            android:src="@drawable/logo_restaurante"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título -->
        <TextView
            android:id="@+id/textTituloRestaurante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Pedidos Restaurante"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageLogoRestaurante" />

        <!-- Nombre Cazuela -->
        <TextView
            android:id="@+id/textNombreCazuela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cazuela"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTituloRestaurante"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"/>

        <!-- Cazuela -->
        <ImageView
            android:id="@+id/imageCazuela"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/cazuela"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textNombreCazuela" />

        <EditText
            android:id="@+id/editTextCantidadCazuela"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/imageCazuela"
            app:layout_constraintStart_toStartOf="@id/imageCazuela"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textPrecioCazuela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $10.000"
            app:layout_constraintTop_toBottomOf="@id/editTextCantidadCazuela"
            app:layout_constraintStart_toStartOf="@id/editTextCantidadCazuela"
            android:layout_marginTop="4dp"/>

        <!-- Nombre Pastel de Choclo -->
        <TextView
            android:id="@+id/textNombrePastel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pastel de Choclo"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textPrecioCazuela"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"/>

        <!-- Pastel de Choclo -->
        <ImageView
            android:id="@+id/imagePastel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/pastel_de_choclo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textNombrePastel" />

        <EditText
            android:id="@+id/editTextCantidadPastel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/imagePastel"
            app:layout_constraintStart_toStartOf="@id/imagePastel"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textPrecioPastel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $12.000"
            app:layout_constraintTop_toBottomOf="@id/editTextCantidadPastel"
            app:layout_constraintStart_toStartOf="@id/editTextCantidadPastel"
            android:layout_marginTop="4dp"/>

        <!-- Subtotal general -->
        <TextView
            android:id="@+id/textSubtotalGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Subtotal: $0"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textPrecioPastel" />

        <!-- Switch de propina general -->
        <Switch
            android:id="@+id/switchPropinaGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="¿Agregar propina?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSubtotalGeneral" />

        <!-- Total final centrado -->
        <TextView
            android:id="@+id/textTotalFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total final: $0"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/switchPropinaGeneral"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>